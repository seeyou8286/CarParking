    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="预计入场"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/plannedCheckInTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>



    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="预计出场"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/plannedCheckOutTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>


    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="实际入场"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/actualCheckInTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="实际出场"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/actualCheckOutTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>


    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="车牌号码"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/plateValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="停车天数"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/parkingDays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>


    <View
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/smssdk_gray" />

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="订单状态"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/bookingStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/smssdk_gray" />

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="总金额"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/totalPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="尾款金额"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/leftPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:padding="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="已付金额"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginLeft="35px"
            android:id="@+id/bookingFee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color5"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/smssdk_gray" />

    <TableRow
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmBooking"
            android:text="确认支付"/>
    </TableRow>
</LinearLayout>